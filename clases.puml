class SolicitudEliminacion {
    - hecho: Hecho
    - causa: String /'debe ser máximo 500 caracteres'/
    + crearSolicitud()
    + aceptarSolicitud()
    + rechazarSolicitud()
}

Hecho -- Fuente
Hecho -- Categoria
